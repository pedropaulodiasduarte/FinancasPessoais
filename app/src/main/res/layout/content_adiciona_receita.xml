<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.financaspessoais.financaspessoais.AdicionaReceita"
    tools:showIn="@layout/activity_adiciona_receita">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/TvAdicionarReceita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000FF"
            android:text="Adicionar Receita"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/TvValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Valor"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/EtValorReceita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="-40dp"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/TvData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Data"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/EtDataReceita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="-25dp"
            android:text="xx/xx/xxxx"
            android:textColor="#000000"
            android:textColorHighlight="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/TvTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Categoria"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/SpTipoReceita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="-25dp" />

        <TextView
            android:id="@+id/TvDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Descrição"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/EtDescricaoReceita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="-40dp"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
